<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="#fff"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/edittext"
        android:layout_marginRight="50dp"
        android:textColorHint="#fff"
        android:textSize="16dp"
        android:text="Transporters List"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tcomname"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="10dp"

            android:hint="Logistics Service Name"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="13dp"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/tname"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"

            android:hint="Logistics Service Name"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="13dp"
            android:padding="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/temail"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="10dp"

            android:hint="Email"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="13dp"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/tphone"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"

            android:hint="Phone"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="13dp"
            android:padding="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Location"
            android:textColor="#fff"
            android:textSize="13dp"
            android:id="@+id/tlocation"
            android:textColorHint="#fff"
            android:padding="10dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/ttype"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="10dp"
            android:hint="Type of vehicle"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="13dp"
            android:padding="10dp"/>
        <TextView
            android:hint="Enter Max Load In Kg"
            android:id="@+id/tcapacite"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"


            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="13dp"
            android:padding="10dp"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:hint="Vehicle Number"
            android:id="@+id/tVehiclenum"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="10dp"

            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="13dp"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/tLicensenum"
            android:hint="License Number"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"


            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="13dp"
            android:padding="10dp"/>
        <TextView
            android:hint="Enter per km Rate"
            android:id="@+id/trate"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"


            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="13dp"
            android:padding="10dp"/>
    </LinearLayout>




    <Button
        android:id="@+id/tbook"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:textSize="13dp"
        android:background="@drawable/edittext"
        android:text="Book"
        android:textColor="#EADADA"
        android:gravity="center"
        android:layout_marginBottom="40dp"/>



</LinearLayout>
    </HorizontalScrollView>
    </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>